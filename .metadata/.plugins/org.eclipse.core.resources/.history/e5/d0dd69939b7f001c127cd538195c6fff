import java.util.ArrayList;
import java.util.Scanner;

public class AddressBook {
	ArrayList<Entry> listOfEntries = new ArrayList<>();
	
	public void addEntry() {
		Scanner input = new Scanner(System.in);
		
		//Read First Name
		System.out.println("\nFirst Name: ");
		String fName = input.next();
		
		//Read Last Name
		System.out.println("\nLast Name: ");
		String lName = input.next();
		
		//Read Phone Number
		System.out.println("\nPhone Number: ");
		long phnNum = Long.parseLong(input.next());
		
		//Read Email
		System.out.println("\nEmail Address: ");
		String email = input.next();
		
		listOfEntries.add(new Entry(fName, lName, phnNum, email));
		System.out.println("\nAdded new entry!");
	}
	
	public static void main(String[] args) {
		
		
		
		System.out.println("1) Add an entry\n");
		System.out.println("2) Remove an entry\n");
		System.out.println("3) Search for a specific entry\n");
		System.out.println("4) Print Address Book\n");
		System.out.println("5) Delete Book\n");
		System.out.println("6) Quit\n");
		System.out.println("Please choose what you'd like to do with the database: ");
		
		// switch statement case 1 - 6
	}
}
